<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_edit_shopping_list_form"
    android:background="@color/colorWhite"
    tools:context="com.ordory.ordory.EditShoppingListFormFragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_gravity="right|top">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="9dp"
            android:paddingTop="5dp"
            android:textColor="@color/colorPrimary"
            android:text="@string/update_shoppinglist_title"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Switch"
            android:id="@+id/isActive"
            android:textOff="Désactivé"
            android:textOn="Activé"
            android:layout_gravity="right" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Nom de la liste"
            android:id="@+id/listName"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_update_shoplist"
            android:layout_marginTop="25dp"
            android:background="@color/colorOrange"
            android:textColor="@color/colorWhite"
            android:textSize="24dp"
            android:text="Enregistrer"
            />

        <TextView
            android:id="@+id/shoppingListFormErr"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="14dp"
            android:textAlignment="center"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="27dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorAccent"
            />

    </LinearLayout>

</FrameLayout>
