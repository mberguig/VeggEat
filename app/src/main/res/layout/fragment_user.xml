<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userspace_fragment"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MyspaceFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="22dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/myspace_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="26dp"
                android:paddingLeft="12dp"
                android:background="@color/colorBlue"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|top">

                <ImageView
                    android:id="@+id/imageUserSpace"
                    android:layout_marginTop="13dp"
                    android:layout_width="145dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:textSize="22dp"
                    android:background="@drawable/ic_person"
                    android:text=" "/>

                <TextView
                    android:id="@+id/txt_userspace_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:textSize="22dp"
                    android:textColor="@color/colorWhite"
                    android:text=" "/>

                <TextView
                    android:id="@+id/txt_userspace_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:textSize="22dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:text=" "/>

                <TextView
                    android:id="@+id/txt_userspace_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:textAlignment="center"
                    android:textSize="22dp"
                    android:textColor="@color/colorWhite"
                    android:text=" "/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
